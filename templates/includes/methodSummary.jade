if locals.methods && methods.length > 0
  table
    tr
      th(colspan='2') Methods
    each item in methods
      tr
        td
          span
           item.type= item.returnType.displayName
        td
          span.itemName
            a(href="#")=item.name
            if (item.typeArguments.length > 0)
              span &lt;
              each arg, i in item.typeArguments
                if i > 0
                  span , 
                span=arg.name
              span &gt;
            span (
            if (item.parameters.length > 0)
              each param, i in item.parameters
                if i > 0
                  span , 
                span=param.type.displayName + " " + param.name
            span )
          div.itemSummary!=item.summary